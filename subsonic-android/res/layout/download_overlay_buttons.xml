<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/download_overlay_buttons"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/overlayColor">

    <ToggleButton
            style="@style/OverlayToggleButton"
            android:id="@+id/download_jukebox"
            android:textOn="RC"
            android:textOff="RC"/>

    <ToggleButton
            style="@style/OverlayToggleButton"
            android:id="@+id/download_equalizer"
            android:textOn="EQ"
            android:textOff="EQ"/>

    <ToggleButton
            style="@style/OverlayToggleButton"
            android:id="@+id/download_visualizer"
            android:textOn="VIS"
            android:textOff="VIS"/>

    <ImageView
            android:id="@+id/download_star"
            android:src="@drawable/unstarred"
            android:background="@drawable/media_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:contentDescription="@null"/>

    <ImageView
            android:id="@+id/download_share"
            android:src="@drawable/ic_action_share"
            android:background="@drawable/media_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:contentDescription="@null"/>

</LinearLayout>