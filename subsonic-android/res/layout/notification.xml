<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:gravity="center"
            android:src="@drawable/unknown_album"
            android:id="@+id/notification_image"
            android:layout_width="64.0dip"
            android:layout_height="64.0dip"
            android:layout_weight="0.0"/>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

        <TextView
                android:text="Song title placeholder"
                android:ellipsize="end"
                android:layout_gravity="left"
                android:id="@+id/notification_title"
                android:focusable="true"
                android:fadingEdge="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-2.0dip"
                android:singleLine="true"
                style="@android:style/TextAppearance.StatusBar.EventContent.Title"/>

        <TextView
                android:text="Artist name placeholder"
                android:ellipsize="end"
                android:layout_gravity="left"
                android:id="@+id/notification_artist"
                android:fadingEdge="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1.0dip"
                android:maxLines="1"
                android:alpha="0.7"
                style="@android:style/TextAppearance.StatusBar.EventContent"/>
    </LinearLayout>

    <ImageButton
            android:id="@+id/notification_playpause"
            android:background="?android:selectableItemBackground"
            android:padding="8.0dip"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:src="@drawable/media_pause"
            android:scaleType="fitCenter"
            android:layout_weight="0.0"/>

    <ImageButton
            android:id="@+id/notification_next"
            android:background="?android:selectableItemBackground"
            android:padding="8.0dip"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginRight="4.0dip"
            android:src="@drawable/media_forward"
            android:scaleType="fitCenter"
            android:layout_weight="0.0"/>

    <ImageButton
            android:id="@+id/notification_close"
            android:background="?android:selectableItemBackground"
            android:padding="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_notification"
            android:layout_weight="0.0"/>
</LinearLayout>
